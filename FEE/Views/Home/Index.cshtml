                                        @if (item.Name.Length > 65)
                                        {
                                            <h4 class="mt-0 mb-0"><a href="#">@item.Name.Substring(0,65)...</a></h4>
                                        }
                                        else
                                        {
                                            <h4 class="mt-0 mb-0"><a href="#">@item.Name</a></h4>
                                        }
                                        <ul class="mb-10">
                                            <li class="text-theme-colored2"><span class="text-theme-colored">Ngày @item.CreateDate.ToString("dd/MM/yyyy")</span></li>
                                        </ul>
                                        <a class="btn btn-theme-colored font-weight-600 font-11 mt-10" style="position:absolute;top:92px;left:15px" href="/Post/PostDetail?id=@item.PostId">Đọc thêm</a>
                                    </div>
                                </div>
                            </div>
                        }
