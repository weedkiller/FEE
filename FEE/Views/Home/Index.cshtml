@model FEE.ViewModel.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}
<section id="home" class="container" style="margin-top:15px">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <!-- /.box-header -->
                    <div class="box-body" style="width:100%;height:400px">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="@Model.Slides.ElementAt(0).Img" style="width:100%; height:400px" alt="First slide">
                                </div>
                                @foreach (var item in Model.Slides.Skip(1).Take(2))
                                {
                                    <div class="item">
                                        <img src="@item.Img" style="width:100%; height:400px" alt="First slide">
                                    </div>
                                }
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" style="height:400px" data-slide="prev">
                                <span class="fa fa-angle-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" style="height:400px" data-slide="next">
                                <span class="fa fa-angle-right"></span>
                            </a>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="section-title mt-0 mb-0">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="mt-0 line-height-1" style="color: #5D9CEC;">TIN NỔI BẬT</h2>
                    <div class="double-line-bottom-theme-colored-2"></div>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row">
                <div class="col-md-6 mb-sm-30">
                    <div>
                        <div class="effect-wrapper">
                            <div class="thumb">
                                <img class="img-fullwidth" style="border-radius:5px; margin-bottom:8px; height:380px" src="@Model.BaiGhim.Img" alt="project">
                            </div>
                            <div>
                                <a href="#"><i class="fa fa-calendar" style="padding-right:10px;"></i>Ngày @Model.BaiGhim.CreateDate.ToString("dd/MM/yyyy")</a>
                                <a href="/Post/PostDetail?id=@Model.BaiGhim.PostId">
                                    <h3 style="margin-top:0">@Model.BaiGhim.Name</h3>
                                </a>
                                <span style="text-align: justify;">
                                    @Model.BaiGhim.Description
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-sm-30">
                    @{
                        foreach (var item in Model.TinNoiBats.Take(5))
                        {
                            <div class="item">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div>
                                            <img style="border-radius:5px;width:100%;height:90px" src="@item.Img">
                                        </div>
                                    </div>
                                    <div class="col-sm-8 pl-0">
                                        <div>
                                            <a href="/Post/PostDetail?id=@item.PostId"><i class="fa fa-calendar" style="padding-right:10px"></i>Ngày @item.CreateDate.ToString("dd/MM/yyyy")</a>
                                            <a href="/Post/PostDetail?id=@item.PostId">
                                                <h4 style="margin: 5px;">@item.Name</h4>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section: Courses -->
<section class="bg-lighter">
