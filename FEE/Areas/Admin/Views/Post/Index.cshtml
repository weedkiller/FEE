@model IEnumerable<FEE.ViewModel.PostViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
<script src="~/Areas/Admin/template_admin/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
            },
            "columnDefs": [
                { "orderable": false, "targets": [1, 3, 4,5,6,7,8] },
                { "orderable": true, "targets": [0, 2] }
            ]
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "responsive": true
        });



    });
</script>

<section class="content-header">
    <h1>
        QUẢN LÝ
        <small>BÀI VIẾT</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chính</a></li>
        <li class="active">Bài viết</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách bài viết</h3>
                    <a href="/admin/post/create" style="margin-right:10px;position:absolute;right:0" class="btn btn-success"><i class="fa fa-fw fa-plus"></i>Thêm mới</a>
                    <button style="margin-right:10px;position:absolute;right:110px" class="btn btn-danger" disabled><i class="fa fa-fw fa-trash-o"></i>Xóa nhiều</button>
                    <a href="/admin/post/trashindex" style="margin-right:10px;position:absolute;right:220px" class="btn btn-warning"><i class="fa fa-fw fa-recycle"></i>Đã xóa(@ViewBag.TrashCount)</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th style="width:15%">Hình ảnh</th>
                                <th style="width:10%">Ngày tạo</th>
                                <th style="width:10%">Trạng thái</th>
                                <th style="width:8%">Trang chủ</th>
                                <th style="width:6%">Nổi bật</th>
                                <th style="width:6%">Ẩn/Hiện</th>
                                <th style="width:7%">Thao tác</th>
                                <th style="width:5%" class="text-center"><input type="checkbox" /></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Name</td>
                                    <td><img src="@item.Img" style="width:120px;height:100px" alt="No Image" /></td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                    <td></td>
                                    <td class="text-center">
                                        <input type="checkbox" onclick="changeHome(@item.PostId,@item.HomeFlag)" @(item.HomeFlag == true ? "checked" : "") />
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" onclick="changeHot(@item.PostId,@item.HotFlag)" @(item.HotFlag == true ? "checked" : "") />
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" onclick="changeStatus(@item.PostId,@item.IsShow)" @(item.IsShow == true ? "checked" : "") />
                                    </td>
                                    <td class="text-center">
                                        <a href="/admin/post/delete/@item.PostId"><i style="color:red" class="fa fa-fw fa-trash"></i></a>
                                        <a onclick="trash(@item.PostId,@item.Delete)"><i style="color:green" class="fa fa-fw fa-pencil"></i></a>
                                    </td>
                                    <td class="text-center"><input type="checkbox" data-id="@item.PostId" class="checkItem" /></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Hình ảnh</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Trang chủ</th>
                                <th>Nổi bật</th>
                                <th>Ẩn/Hiện</th>
                                <th>Thao tác</th>
                                <th class="text-center"><input type="checkbox" /></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script>
    function trash(id, deleted) {
        var xid = id;
        var st = deleted == false ? false : true;
        $.ajax({
            type: "POST",
            url: '/Admin/Post/Trash',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: xid, status: st }),
            dataType: "json",
            success: function (res) {
                if (res == true) {
                    location.reload();
                }
            }
        });
    }
    function changeShow(id, status) {
        var xid = id;
        var st = status == false ? false : true;
        $.ajax({
            type: "POST",
            url: '/Admin/Post/changeshow',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: xid, status: st }),
            dataType: "json",
            success: function (res) {
                if (res == true) {
                    location.reload();
                }
            }
        });
    }
    function changeHome(id, status) {
        var xid = id;
        var st = status == false ? false : true;
        $.ajax({
            type: "POST",
            url: '/Admin/Post/changehome',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: xid, status: st }),
            dataType: "json",
            success: function (res) {
                if (res == true) {
                    location.reload();
                }
            }
        });
    }
    function changeHot(id, status) {
        var xid = id;
        var st = status == false ? false : true;
        $.ajax({
            type: "POST",
            url: '/Admin/Post/changehot',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: xid, status: st }),
            dataType: "json",
            success: function (res) {
                if (res == true) {
                    location.reload();
                }
            }
        });
    }
</script>

