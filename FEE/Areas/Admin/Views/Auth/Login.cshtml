@model FEE.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<div class="login-box-body">
    <p class="login-box-msg">Đăng nhập hệ thống</p>

    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <div class="form-group has-feedback">
            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập tài khoản" })
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
            </div>
            <!-- /.col -->
        </div>
    }
</div>

