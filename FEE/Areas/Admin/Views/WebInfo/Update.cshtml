@model FEE.ViewModel.WebInfoViewModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@Html.Partial("_MessageAlert")

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Cập nhật danh mục mới</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("Update", "WebInfos", FormMethod.Post))
        {
            @Html.TextBoxFor(model => model.Id, htmlAttributes: new { @style = "display:none", @type = "number" })
            <div class="form-group">
                <label>Hình ảnh Logo:</label>
                <button type="button" class="btn btn-xs btn-default" style="margin-top:2px;margin-left:0px" onclick="chooseImage()">Chọn ảnh</button>
                @Html.TextBoxFor(model => model.Logo, htmlAttributes: new { @style = "display:none" })
                @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <img class="img-responsive" style="max-width:60%;text-align:center" id="Img2" src="@ViewBag.Img" alt="Ảnh đại diện" />
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
            </div>
            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập Email" })
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập Địa chỉ" })
            </div>
            <div class="form-group">
                <label>Facebook:</label>
                @Html.TextBoxFor(model => model.Facebook, htmlAttributes: new { @class = "form-control", @placeholder = "Links facebook" })
            </div>
            <div class="form-group">
                <label>Youtube:</label>
                @Html.TextBoxFor(model => model.Youtube, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập like youtube" })
            </div>
            <div class="form-group">
                <label>Zalo:</label>
                @Html.TextBoxFor(model => model.Zalo, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập Links Zalo" })
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a href="/Admin/WebInfo/Index" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>


