@model IEnumerable<FEE.ViewModel.PermissionScreenViewModel>

@{
    ViewBag.Title = "GetCommandViews";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@Html.Partial("_MessageAlert")
<script src="~/Areas/Admin/template_admin/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
            },
            "columnDefs":
                [
                    { "orderable": false, "targets": [] },
                    { "orderable": true, "targets": [0, 1] },
                    { "searchable": false, "targets": [0] }
                ]
                
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "responsive": true
        });
    });
</script>

<section class="content-header">
    <h1>
        QUẢN LÝ
        <small>PHÒNG BAN</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chính</a></li>
        <li class="active">Phòng ban</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Bảng danh sách quyền thác thác của hệ thống</h3>
                    <button type="button" onclick="savePermission()" style="margin-right:10px;position:absolute;right:0" class="btn btn-success"><i class="fa fa-fw fa-plus"></i>Lưu lại</button>
                    <select name="roleId" class="form-control" onchange="loadPermission(this)" style="position:absolute;right:100px;top:10px;width:190px">
                        <option value="0">Nhóm quyền</option>
                        <option value="1">Trưởng khoa</option>
                        <option value="2">Phó khoa</option>
                        <option value="3">Bộ môn</option>
                    </select>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>

                                <th style="width:20%">Chức năng</th>

                                <th style="width:80%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                             {
                                <tr>
                                    <td>@item.Name</td>
                                    <td class="row">
                                        @foreach (var sub in item.Childrens)
                                        {
                                            <div class="col-md-3">
                                                <div>
                                                    <span class="text-bold">@sub.Name</span>
                                                </div>
                                                <ul style="padding-left:12px">
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId CREATE" type="checkbox" >
                                                        <span>Thêm mới</span>
                                                    </li>
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId UPDATE" type="checkbox">
                                                        <span>Chỉnh sửa</span>
                                                    </li>
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId DELETE" type="checkbox">
                                                        <span>Xóa bỏ</span>
                                                    </li>
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId VIEW" type="checkbox">
                                                        <span>Truy cập</span>
                                                    </li>
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId APPROVE" type="checkbox">
                                                        <span>Duyệt bài</span>
                                                    </li>
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId IMPORT" type="checkbox">
                                                        <span>Nhập File</span>
                                                    </li>
                                                    <li style="list-style:none">
                                                        <input class="isValue" data-value="@sub.FunctionId EXPORT" type="checkbox">
                                                        <span>Xuất File</span>
                                                    </li>
                                                </ul>
                                            </div>
                                        }
                                    </td>
                                </tr>
                             }
                        </tbody>
                        <tfoot>
                            <tr>

                                <th>Chức năng</th>

                                <th style="width:30%">Thao tác</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script>
    var roleId;
    function loadPermission(xthis) {
        roleId = xthis.value;
    }
    function CheckedCommand (functionId, commandId) {
        for (var i = 0; i < $scope.listPermissons.length; i++) {
            if ($scope.listPermissons[i].CommandId == commandId && $scope.listPermissons[i].FunctionId == functionId) {
                return true;
            }
            else {
                continue;
            }
        }
    }
    function savePermission() {
        jQuery(".isValue").each(function () {
            if ($(this).is(":checked") == true) {
                console.log($(this).data("value").replace(' ', '_'));
            }
        })
    }
</script>

