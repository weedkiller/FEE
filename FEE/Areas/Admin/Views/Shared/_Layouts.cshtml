<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Trang quản trị</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Areas/Admin/template_admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/template_admin/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/template_admin/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/template_admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/template_admin/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/template_admin/dist/css/skins/skin-blue.min.css">
    <link href="~/Areas/Admin/template_admin/plugins/alert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/template_admin/plugins/alert/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_Header")
        @{ Html.RenderAction("SideBar", "Home");}
        <div class="content-wrapper">
            <section class="content container-fluid">

                @RenderBody()

            </section>
        </div>
        @Html.Partial("_Footer")
        <div class="control-sidebar-bg"></div>
    </div>
    <script src="~/Areas/Admin/template_admin/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Areas/Admin/template_admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/template_admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/template_admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Areas/Admin/template_admin/dist/js/adminlte.min.js"></script>
    <script src="~/Areas/Admin/template_admin/plugins/alert/sweetalert2.min.js"></script>
    <script src="~/Areas/Admin/template_admin/plugins/alert/toastr.min.js"></script>
    <script src="~/Areas/Admin/template_admin/bower_components/ckeditor/ckeditor.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
                },
                "columnDefs": [
                    { "orderable": false, "targets": [2,3, 4] },
                    { "orderable": true, "targets": [0, 1] }
                ]
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": false,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
            
            if ($('#editor1').length > 0) {
                CKEDITOR.replace('editor1');
            }
            
        });
        $(window).on('load', function () {
            const mgs_type = $('input[name=mgs_type]').val();
            const msg = $('input[name=mgs]').val();
            if (mgs_type != '' && msg != '') {
                toastr.options.timeOut = 5000;
                switch (mgs_type) {
                    case 'success':
                        toastr.info(msg);
                        break;
                    case 'warning':
                        toastr.warning(msg);
                        break;
                    case 'danger':
                        toastr.error(msg);
                        break;
                }
            }
        });
        $("#checkAll").click(function () {
            console.log($('#checkItem'));
            jQuery('.checkItem').not(this).prop('checked', this.checked);
        });
    </script>
</body>
</html>