<aside class="main-sidebar">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Assets/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Người dùng: @Session["Name"].ToString()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <ul class="sidebar-menu" data-widget="tree">
            @if (User.IsInRole("admin") || User.IsInRole("teacher"))
            {
                <li><a href="/Home/Index"><i class="fa fa-edit"></i> Trang chủ</a></li>
            }
            <li class="header">Điều Hành</li>
            @if (User.IsInRole("admin") || User.IsInRole("teacher"))
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-edit"></i> <span>Môn học</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="/Subject/Index"><i class="fa fa-circle-o"></i> Danh sách môn học</a></li>
                        <li><a href="/Subject/Create"><i class="fa fa-circle-o"></i> Thêm môn học</a></li>
                    </ul>
                </li>
            }
            @if (User.IsInRole("admin") || User.IsInRole("teacher"))
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-edit"></i> <span>Câu hỏi</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        @if (User.IsInRole("admin"))
                        {
                            <li><a href="/Quiz/Index"><i class="fa fa-circle-o"></i> Danh sách câu hỏi</a></li>
                        }
                        <li><a href="/Quiz/Create"><i class="fa fa-circle-o"></i> Thêm câu hỏi mới</a></li>
                        <li><a href="/Quiz/MyIndex"><i class="fa fa-circle-o"></i> Câu hỏi của tôi</a></li>
                    </ul>
                </li>
            }
            @if (User.IsInRole("admin") || User.IsInRole("teacher"))
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-edit"></i> <span>Đề thi</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        @if (User.IsInRole("admin"))
                        {
                            <li><a href="/QuizTest/Index"><i class="fa fa-circle-o"></i> Danh sách đề thi</a></li>
                        }
                        <li><a href="/QuizTest/Create"><i class="fa fa-circle-o"></i> Thêm đề thi</a></li>
                        <li><a href="/QuizTest/MyIndex"><i class="fa fa-circle-o"></i> Đề thi của tôi</a></li>
                        <li><a href="/DoQuiz/MyActiveTest/"><i class="fa fa-circle-o"></i> Đề thi đang thi</a></li>
                    </ul>
                </li>
            }
            @if (User.IsInRole("admin"))
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-edit"></i> <span>Người dùng</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="/User/Index"><i class="fa fa-circle-o"></i> Danh sách người dùng</a></li>
                    </ul>
                </li>
            }
            @if (User.IsInRole("student"))
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-edit"></i> <span>Đề thi theo môn</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="/Subject/IndexStudent"><i class="fa fa-circle-o"></i> Danh sách môn học</a></li>
                    </ul>
                </li>
            }
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-edit"></i> <span>Tài khoản</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="/Authen/ChangePass"><i class="fa fa-circle-o"></i> Đổi mật khẩu</a></li>
                </ul>
            </li>
        </ul>
    </section>
</aside>
